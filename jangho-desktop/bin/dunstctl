#!/bin/bash

set -euo pipefail

self=$0
DESKBUS="${HOME}/.setup/jangho-desktop/lib/bin/deskbus"

case "$1" in
  enable)
    "${DESKBUS}" set-dunst-enabled 1
    action=enable
    ;;
  disable)
    "${DESKBUS}" set-dunst-enabled 0
    action=disable
    ;;
  toggle)
    if [[ "$("${DESKBUS}" toggle-dunst-enabled)" -eq 0 ]]; then
      action=disable
    else
      action=enable
    fi
    ;;
  dismiss)
    "${DESKBUS}" clear-dunst-id-all
    if [[ "$("${DESKBUS}" get-dunst-enabled)" -eq 1 ]]; then
      makoctl dismiss -a
    fi
    exit 0
    ;;
  *)
    >&2 echo 'Unrecognized command'
    exit 1
    ;;
esac

if [[ "${action}" == 'enable' ]]; then
  mako &
else
  "${DESKBUS}" clear-dunst-id-all
  killall mako || :
fi

exit 0
