#!/bin/bash

set -euo pipefail

self=$0
DESKBUS="${HOME}/.setup/jangho-desktop/lib/bin/deskbus"

case "$1" in
  enable)
    "${DESKBUS}" set-dunst-enabled 1
    action=enable
    ;;
  disable)
    "${DESKBUS}" set-dunst-enabled 0
    action=disable
    ;;
  toggle)
    if [[ "$("${DESKBUS}" toggle-dunst-enabled)" -eq 0 ]]; then
      action=disable
    else
      action=enable
    fi
    ;;
  restart-silent)
    killall dunst || :
    "${DESKBUS}" clear-dunst-id-all
    dunst &
    exit 0
    ;;
  restart)
    killall dunst || :
    "${DESKBUS}" clear-dunst-id-all
    dunst &
    "${self}" enable
    exit 0
    ;;
  clear-all)
    "${DESKBUS}" clear-dunst-id-all | xargs --no-run-if-empty -L1 -- dunstify -C
    exit 0
    ;;
  *)
    >&2 echo 'Unrecognized command'
    exit 1
    ;;
esac

if [[ "${action}" == 'enable' ]]; then
  killall -SIGUSR2 dunst
  jdunstify 'dunstctl' 'Dunst enabled'
else
  killall -SIGUSR1 dunst
fi

exit 0
