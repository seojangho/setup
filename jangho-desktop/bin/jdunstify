#!/bin/bash

set -euo pipefail

DESKBUS="${HOME}/.setup/jangho-desktop/lib/bin/deskbus"

class=$1
prev_id=$("${DESKBUS}" get-dunst-id "${class}")
declare -a replace=()
[[ -n "${prev_id}" ]] && replace=("--replace=${prev_id}")
next_id=$(dunstify --printid "${replace[@]}" "${@:2}")
"${DESKBUS}" set-dunst-id "${class}" "${next_id}"

exit 0
