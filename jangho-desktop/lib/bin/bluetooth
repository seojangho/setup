#!/bin/bash

set -euo pipefail

connect() {
  local -r mac=$1
  local -r hname=$2
  [[ "${hname}" != "${HOSTNAME}" ]] && return 0
  bluetoothctl connect "${mac}" > /dev/null 2>&1 || :
  sleep 1s
  bluetoothctl trust "${mac}" > /dev/null 2>&1 || :
}

bluetoothctl power on || exit 0
while :; do
  sleep 1s
  connect 78:44:05:7E:78:36 pear # jbl
done
