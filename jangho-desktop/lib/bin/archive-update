#!/bin/bash

set -euo pipefail

ARCHIVE=${HOME}/archive
colors=(-h string:bgcolor:#ffff00 -h string:fgcolor:#000000)

up() {
  local -r dir=$1
  cd "${dir}"
  if ! svn up; then
    jdunstify archive-update --urgency=critical "Cannot update ${dir}"
    exit 1
  fi
}

jdunstify archive-update 'archive: updating....' "${colors[@]}" --urgency=critical
up "${ARCHIVE}/2019/spring"
up "${ARCHIVE}/$(date +%Y/%m)"
jdunstify archive-update 'archive: Updated spring & this month'
exit 0
