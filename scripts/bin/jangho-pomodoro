#!/bin/bash

while true
do
  zenity --info --icon-name=gnome-pomodoro --title "Pomodoro" --text "$(timew)""\nStart your task. You have 25 minutes!" &
  sleep 25m &
  wait $!

  zenity --info --icon-name=gnome-pomodoro --title "Pomodoro" --text "$(timew)""\nGet some rest. You have 10 minutes." &
  timew stop
  sleep 10m &
  wait $!

  timew continue
done
