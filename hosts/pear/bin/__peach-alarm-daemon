#!/bin/bash

isrunning() {
  if /home/jangho/.setup/hosts/pear/bin/peach-isrunning; then
    echo 'y'
  else
    echo 'n'
  fi
}

RUNNING=$(isrunning)

while :; do
  NEW_RUNNING=$(isrunning)
  if [[ "${RUNNING}" != "${NEW_RUNNING}" ]] && [[ "${NEW_RUNNING}" == 'n' ]]; then
    ssh mango.vanilla.jangho.io -- /opt/mango/peach-alarm/notify-qemu-exit.sh
  fi
  RUNNING="${NEW_RUNNING}"
  sleep 1s
done
