#!/bin/bash

# usage: peach-qemu <CORES> <MEM> <OTHER_PARAMS...>

set -euo pipefail
VARS="$(sudo mktemp -d)/MY_VARS.fd"
PULSE_SOCKET=/run/user/${UID}/pulse/native
sudo cp /usr/share/ovmf/x64/OVMF_VARS.fd "${VARS}"
sudo QEMU_AUDIO_DRV=pa QEMU_PA_SERVER="${PULSE_SOCKET}" PULSE_SERVER="unix:${PULSE_SOCKET}" PULSE_COOKIE="${HOME}/.config/pulse/cookie" qemu-system-x86_64 \
  -name jangho-qemu-lemon \
  -drive if=pflash,format=raw,readonly,file=/usr/share/ovmf/x64/OVMF_CODE.fd \
  -drive "if=pflash,format=raw,file=${VARS}" \
  -enable-kvm -m "$2" \
  -cpu host,-npt,+topoext,kvm=off,hv_vendor_id=seojangho012,hv_time,hv_relaxed,hv_vapic,hv_spinlocks=0x1fff \
  -smp "$1",sockets=1,cores="$1",threads=1 \
  -device vfio-pci,host=06:00.0,x-vga=on -vga none \
  -drive file=/dev/mapper/peach,format=raw,if=virtio \
  -drive file=/dev/mapper/peach-tmp,format=raw,if=virtio \
  -usb -device usb-host,vendorid=1386,productid=884 \
  -object input-linux,id=mouse0,evdev=/dev/input/by-id/usb-Logitech_USB_Optical_Mouse-event-mouse \
  -object input-linux,id=kbd0,evdev=/dev/input/by-id/usb-Logitech_USB_Keyboard-event-kbd,grab_all=on,repeat=on \
  -net nic -net user,hostfwd=tcp::3389-:3389 -nographic -soundhw hda "${@:3}"
exit 0
