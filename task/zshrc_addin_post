alias ts='task sync'
alias tw='timew'

# task: a to-do entry I can start NOW
# When I 'complete' this task, I can delete it right away
alias t='task'
alias ta='task add'

# schedule: a schedule that I should watch over
# unlike task, a schedule cannot be deleted until the specified date arrives
function s() {
  if [[ -z "$1" ]]; then
    task schedule
  else
    task $@
  fi
}
function sa() {
  if [[ -z "$1" ]]; then
    echo "Usage: $0 <date> <other parameters>"
    echo "Adds a schedule that I should watch over"
    return 1
  fi
  task add schedule:"$1" due:"$1" ${@:2}
}

# await: a task that I don't have to care about right now
function a() {
  if [[ -z "$1" ]]; then
    task await
  else
    task $@
  fi
}
function aa() {
  if [[ -z "$1" || -z "$2" ]]; then
    echo "Usage: $0 <start> <due> <other parameters>"
    echo "Adds a task that I don't have to care about right now"
    return 1
  fi
  task add wait:"$1" due:"$2" ${@:3}
}
